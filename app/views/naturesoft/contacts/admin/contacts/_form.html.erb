                  <div class="col-md-6">
                    <div class="form-group">
                      <label class="col-md-12 control-label" ><%= t(:first_name) %> </label>
                      <div class="col-md-12">
                        <%= f.text_field :first_name, class: "form-control", placeholder: "First name..." %>
                      </div>
                    </div>
                  </div>
                  <div class="col-md-6">
                    <div class="form-group">
                      <label class="col-md-12 control-label" ><%= t(:last_name) %> </label>
