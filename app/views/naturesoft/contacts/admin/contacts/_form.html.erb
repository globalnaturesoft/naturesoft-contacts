                    <div class="form-group">
                      <label class="col-md-12 control-label" ><%= t(:description) %> </label>
                      <div class="col-md-12">
                        <%= f.text_area :description, class: "form-control", style: "min-width:100%;max-width:100%" %>
                      </div>
                    </div>
                  </div>
                </div>
              </div>
                
              <div class="tab-pane has-padding" id="control-tab2">
