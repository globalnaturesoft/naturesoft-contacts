<div class="panel panel-flat">
  
  <div class="panel-heading"></div>
  
  <div class="panel-body">

    <%= form_for([naturesoft_contacts, :admin, contact], html: {class: "form-horizontal validate"}) do |f| %>
    
      <div class="tabbable tab-content-bordered">
          <ul class="nav nav-tabs bg-primary">
              <li class="active"><a href="#control-tab1" data-toggle="tab"><%= t(:general) %></a></li>
              <li><a href="#control-tab2" data-toggle="tab"><%= t(:others) %> </a></li>
          </ul>
          <div class="tab-content">
              <div class="tab-pane has-padding active" id="control-tab1">
