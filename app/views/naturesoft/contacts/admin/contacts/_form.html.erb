<% if contact.errors.any? %>
  <div class="alert alert-warning alert-bordered">
    <button type="button" class="close" data-dismiss="alert"><span>Ã—</span><span class="sr-only">Close</span></button>
    <div id="error_explanation">
      <h2><%= pluralize(contact.errors.count, "error") %> prohibited this slide from being saved:</h2>
  
      <ul>
      <% contact.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  </div>
<% end %>

<div class="panel panel-flat">
  
  <div class="panel-heading"></div>
  
  <div class="panel-body">

    <%= form_for([naturesoft_contacts, :admin, contact], html: {class: "form-horizontal validate"}) do |f| %>
    
      <div class="row">
        <div class="col-md-6">
          <div class="form-group">
            <label class="col-md-12 control-label" ><%= t(:first_name) %> <span class='text-danger'>*</span></label>
            <div class="col-md-12">
              <%= f.text_field :first_name, class: "form-control required", placeholder: "First name..." %>
            </div>
          </div>
        </div>
        <div class="col-md-6">
          <div class="form-group">
            <label class="col-md-12 control-label" ><%= t(:last_name) %> <span class='text-danger'>*</span></label>
            <div class="col-md-12">
              <%= f.text_field :last_name, class: "form-control required", placeholder: "Last name..." %>
            </div>
          </div>
        </div>
      </div>
      
      <div class="row">
        <div class="col-md-6">
          <div class="form-group">
            <label class="col-md-12 control-label" ><%= t(:email) %> <span class='text-danger'>*</span></label>
            <div class="col-md-12">
              <%= f.text_field :email, class: "form-control required" %>
            </div>
          </div>
        </div>
        <div class="col-md-6">
          <div class="form-group">
            <label class="col-md-12 control-label" ><%= t(:phone) %> <span class='text-danger'>*</span></label>
            <div class="col-md-12">
              <%= f.text_field :phone, class: "form-control required" %>
            </div>
          </div>
        </div>
      </div>
      
      <div class="row">
        <div class="col-md-12">
          <div class="form-group">
            <label class="col-md-12 control-label" ><%= t(:address) %> </label>
            <div class="col-md-12">
              <%= f.text_field :address, class: "form-control required" %>
            </div>
          </div>
        </div>
      </div>
      
      <div class="row">
        <div class="col-md-12">
          <div class="form-group">
            <label class="col-md-12 control-label" ><%= t(:subject) %> </label>
            <div class="col-md-12">
              <%= f.text_field :subject, class: "form-control required" %>
            </div>
          </div>
        </div>
      </div>
      
      <div class="row">
        <div class="col-md-12">
          <div class="form-group">
            <label class="col-md-12 control-label" ><%= t(:message) %> </label>
            <div class="col-md-12">
              <%= f.text_area :message, class: "form-control required", style: "min-width:100%;max-width:100%" %>
            </div>
          </div>
        </div>
      </div>
    
      <div class="text-right">
        <%= button_tag "#{t(:save)}<i class=\"icon-check position-right\"></i>".html_safe, class: "btn btn-primary"%>
        <%= link_to "#{t(:cancel)}<i class=\"icon-cross3 position-right\"></i>".html_safe, naturesoft_contacts.admin_contacts_path, class: "btn btn-danger"%>
      </div>
        
    <% end %>
  </div>
</div>