<% title "Contacts" %>

<div class="page_actions">
    <%= link_to ("#{t(:new_contact)}" + '<i class="icon-plus22 position-right"></i>').html_safe, naturesoft_contacts.new_admin_contact_path, class: 'btn btn-primary' %>
</div>
<br />
<form class="listing-form">
  
  <div class="panel panel-flat">
      <div class="panel-body filter-box">                
          <div class="row">
              <div class="col-md-3">
                  <div class="form-group">
                      <label><%= t(:sort_by) %></label>
                      <%= select_tag(:sort_by, options_for_select(Naturesoft::Contacts::Contact.sort_by, :selected => params[:sort_by]), class: "select2") %>
                  </div>
              </div>
              <div class="col-md-3">
                  <div class="form-group">
                      <label><%= t(:sort_order) %></label>
                      <%= select_tag(:sort_orders, options_for_select(Naturesoft::Contacts::Contact.sort_orders, :selected => params[:sort_orders]), class: "select2") %>
                  </div>
              </div>
              <div class="col-md-3">
                  <div class="form-group has-feedback">
                      <label><%= t(:search) %></label>
                      <input type="text" name="keyword" class="form-control" placeholder="Enter search..." value="<%= params[:keyword] %>">
                      <div class="form-control-feedback">
                          <i class="icon-search4 text-size-base"></i>
                      </div>
                  </div>
              </div>
          </div>
      </div>
  </div>
  
  <!-- Basic datatable -->
  <div class="panel panel-flat">
    <div class="table-container">
      <table class="table table-striped">
        <thead>
          <tr class="bg-teal-800">
              <th><%= t(:full_name) %></th>
              <th>Email/Phone</th>
              <th><%= t(:address) %></th>
              <th><%= t(:message) %></th>
              <th><%= t(:status) %></th>
              <th><%= t(:sent_date) %></th>
              <th class="text-right"><%= t(:actions) %></th>
          </tr>
        </thead>
        <tbody>
          <% @contacts.each do |contact| %>
            <tr>
              <td class="kq_search">
                <%= contact.display_name %>
              </td>
              <td class="kq_search">
                <%= contact.email %><br /><%= contact.phone %>
              </td>
							<td class="kq_search">
                <%= contact.address %>
              </td>
							<td class="kq_search">
                <%= contact.subject %><br /><i><%= contact.message %></i>
              </td>
							<td><%= display_status(contact.status) %></td>
              <td><%= contact.created_at.strftime("%d/%m/%Y") %></td>
              <td class="text-right">
                <div class="btn-group">
									<%= link_to '<i class="icon-point-right"></i>'.html_safe, naturesoft_contacts.admin_contact_path(contact), class: "btn bg-teal-400 btn-icon", title: "View detail" %>
                  <button type="button" class="btn bg-teal-400 dropdown-toggle" data-toggle="dropdown" aria-expanded="false"><span class="caret"></span></button>
                  <ul class="dropdown-menu dropdown-menu-right">
										<li>
											<%= link_to '<i class="icon-pencil"></i>'.html_safe + t(:edit), naturesoft_contacts.edit_admin_contact_path(contact), title: "Edit Contact" %>
										</li>
										<li class="divider"></li>
										<li>
											<%= link_to '<i class="glyphicon glyphicon-trash"></i>'.html_safe + t(:delete), naturesoft_contacts.admin_contact_path(contact), method: :delete, data: { confirm: 'Are you sure?' } , class: "backend_delete_item" %>
										</li>
									</ul>
								</div>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
      <div class="dataTables_wrapper no-footer">
        <div class="datatable-footer showed">
            <div class="dataTables_info" ><%= page_entries_info @contacts %></div>
            <div class="dataTables_paginate paging_simple_numbers">
              <%= will_paginate @contacts, previous_label: '←', next_label: '→', renderer: BootstrapPagination::Rails %>
            </div>
        </div>
      </div>
    
    </div>
  </div>
  <!-- /basic datatable -->
</form>